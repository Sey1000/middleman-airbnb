<%= partial "components/flat_banner", locals: { city: flat.city } %>

<div class="show-container">
  <div class="user-container">
    <div class="host-face">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{flat.username}", class: "img-circle avatar-medium" %>
      <p><%= flat.name %></p>
    </div>
    <div class="host-desc">
      <h5><%= flat.desc %></h1>
      <p><%= flat.city %></p>
    </div>
    <div class="form-booking">
      <form>
        <h4 class="text-center">Book this flat</h4>
        <div class="row">
        <div class="form-group col-xs-6">
          <input type="text" name="checkin" id="checkin" placeholder="checkin" class="form-control">
        </div>
        <div class="form-group col-xs-6">
          <input type="text" name="checkout" id="checkout" placeholder="checkout" class="form-control">
        </div>
      </div>
      <select class="form-control">
        <option>1 guest</option>
        <option>2 guests</option>
        <option>3 guests</option>
      </select>
      <button type="submit" class="btn btn-default btn-full-width btn-red">Book it</button>
    </form>
    </div>
  </div>
  
</div>



